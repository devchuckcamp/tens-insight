# Tens-Insight Environment Variables
# Copy this to .env and fill in your values

# Database Configuration
# For local development (connecting to GoInsight's Docker container from host):
# Use localhost:5432 since the container exposes port 5432
# Password should match POSTGRES_PASSWORD from GoInsight's .env
DATABASE_URL=postgresql://goinsight:goinsight_dev_pass@localhost:5432/goinsight?sslmode=disable

# For Docker deployment (running tens-insight in the same network as goinsight):
# Use the container name 'goinsight-postgres' and include the password if needed
# DATABASE_URL=postgresql://goinsight:goinsight_dev_pass@goinsight-postgres:5432/goinsight?sslmode=disable

# Model Configuration
MODELS_DIR=models
RANDOM_SEED=42

# Training Configuration
# BATCH_SIZE: Number of samples per gradient update during training
BATCH_SIZE=32
# EPOCHS: Number of complete passes through the training dataset
EPOCHS=50
# VALIDATION_SPLIT: Fraction of training data to use for validation (1-this = test fraction)
VALIDATION_SPLIT=0.2

# Scoring Configuration
# SCORE_BATCH_SIZE: Number of predictions to generate at once during batch scoring
SCORE_BATCH_SIZE=1000

# Logging
# LOG_LEVEL: Logging verbosity (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
